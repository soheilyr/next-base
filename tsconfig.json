{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components": ["./components/*"],
      "@/images": ["./public/images/*"],
      "@/icons": ["./public/icons/*"],
      "@/fonts": ["./public/fonts/*"],
      "@/configs": ["./components/*"],
      "@/types": ["./types/*"],
      "@/hooks": ["./hooks/*"],
      "@/schema": ["./schema/*"],
      "@/services": ["./services/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "components/Common/Button/Button.stories.tsx"
  ],
  "exclude": ["node_modules"]
}
